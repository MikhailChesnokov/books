@using Users.Models
@model IEnumerable<Users.Models.AppUser>

<div>
    <h4>User Accounts</h4>
</div>
<style>
    td {
        border: 1px solid black
    }
</style>
<table>
    <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Email</th>
    </tr>
    
    @if (!Model.Any()) {
        <tr>
            <td colspan="3">No User Accounts</td>
        </tr>
    } else {
        foreach (AppUser user in Model) {
            <tr>
                <td>@user.Id</td>
                <td>@user.UserName</td>
                <td>@user.Email</td>
            </tr>
        }
    }
    
    <a asp-action="Create">Create</a>
</table>